<% if signed_in? %>

  <%= form_for :session, url: signout_path, method: 'delete' do |f| %>
    <%= link_to "My Profile", current_user, class: "btn btn-default", id: "sm-homebutton" %>
    <%= f.submit "Sign out", id: 'signout', class: "btn btn-default", id: "sm-homebutton" %>
  <% end %>

  <!-- <%= link_to "Home", root_path %> -->

<% else %>

  <%= link_to "Sign In", signin_path, class: "btn btn-default", id: "sm-homebutton" %> <%= link_to "Sign up", signup_path, class: "btn btn-default", id: "sm-homebutton" %>

<% end %>
